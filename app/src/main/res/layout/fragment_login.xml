<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/x1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="210dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/login_coutour"
        android:digits="1234567890"
        android:hint="请输入您的账号"
        android:inputType="textEmailAddress"
        android:textColor="@color/login_black"
        android:textColorHint="@color/login_hint_black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/x2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/login_coutour"
        android:hint="请输入密码"
        android:inputType="textEmailAddress"
        android:textColor="@color/login_black"
        android:textColorHint="@color/login_hint_black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/x1"
        app:layout_constraintTop_toBottomOf="@+id/x1" />

    <TextView
        android:background="@drawable/ai_bg"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="注册"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/x2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>