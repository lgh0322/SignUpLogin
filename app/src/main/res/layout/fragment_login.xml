<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/x1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/login_coutour"
        android:hint="请输入您的账号"
        android:inputType="textEmailAddress"
        android:textColor="@color/login_black"
        android:textColorHint="@color/login_hint_black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/x2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/login_coutour"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="@color/login_black"
        android:textColorHint="@color/login_hint_black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/x1"
        app:layout_constraintTop_toBottomOf="@+id/x1" />

    <TextView
        android:id="@+id/signup"
        android:textSize="16sp"
        android:textColor="#ff15b9bf"
        android:gravity="center"
        android:padding="10dp"
        android:text="还没有账号？ 点击注册"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/x2"
        app:layout_constraintStart_toStartOf="@id/x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/login"
        android:background="@drawable/ai_bg"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="登录"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/x2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="120dp"
        android:layout_height="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>